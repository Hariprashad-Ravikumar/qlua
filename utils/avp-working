#!/bin/sh
PACKTOP=/Users/avp/Local/packages

#TARGET=`(cd ..; pwd)`/install
TARGET=$PACKTOP/qlua-1-xxx

CC="gcc -g -std=c99 -m32 -DQD_Nc=3"           \
./configure                                   \
   --with-qdp=$PACKTOP/qdp-1.9.0-a7           \
   --with-lua=$PACKTOP/lua-5.1.4              \
   --with-gsl=$PACKTOP/gsl-1.13-qr-complex    \
   --with-atlas=$PACKTOP/atlas-3.9.23         \
   --with-lhpc-aff=$PACKTOP/lhpc-aff-2.1.0    \
   --with-clover=$PACKTOP/clover-1.2.2        \
   --with-mdwf=$PACKTOP/mdwf-1.3.0            \
   --with-extras                              \
   --prefix=$TARGET                           \
   --without-nc=any                           \
   --with-nc=3                                \
   $*

#
#