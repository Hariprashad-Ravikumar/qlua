#!/bin/sh
PACKTOP=/Users/avp/Local/packages/macosx-devel

#TARGET=`(cd ..; pwd)`/install
TARGET=$PACKTOP/qlua-working
## for all colors. 

#GCC=gcc
#GCC="gcc -g" # This crashes
GCC="gcc-4.0 -g"

CC="$GCC -m64"                            \
COPTS="-Wall"                                 \
./configure                                   \
   --with-qdp=$PACKTOP/qdp                    \
   --with-lua=$PACKTOP/lua                    \
   --with-gsl=$PACKTOP/gsl                    \
   --with-lhpc-aff=$PACKTOP/aff               \
   --with-clover=$PACKTOP/clover              \
   --with-mdwf=$PACKTOP/mdwf                  \
   --with-extras                              \
   --prefix=$TARGET                           \
   $*
