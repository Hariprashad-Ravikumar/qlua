#!/bin/sh
PACKTOP=/Users/avp/Local/packages

#TARGET=`(cd ..; pwd)`/install
TARGET=$PACKTOP/qlua-0.12.0-x

LD="gcc -g" \
./configure \
   --prefix=$TARGET \
   --with-extras \
   --with-lua=$PACKTOP/lua-5.1.4 \
   --with-qdp=$PACKTOP/qdp-1.8.1.memleak \
   --with-lhpc-aff=$PACKTOP/lhpc-aff-2.1.0 \
   --with-clover=/Users/avp/Sandbox/USQCD/clover/install \
   --without-nc=any \
   --with-nc=3 \
   --with-extras

