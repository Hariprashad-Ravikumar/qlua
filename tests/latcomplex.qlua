d = 128
LAT = qcd.lattice({d})

j = LAT:pcoord(0)
x = LAT:Real(LAT:pcoord(0)) * (math.pi / d)
c = x:cos()
s = x:sin()

z = LAT:Complex(0)
LAT.even:where(function () z:set(LAT:Complex(-1) * x) end)
LAT.odd:where(function () z:set(LAT:Complex(1)) end)

q = LAT:Complex(c) * s

for i = 0, LAT[0] - 1 do
  print(i, q[{i}]:real(), c[{i}], s[{i}])
end

