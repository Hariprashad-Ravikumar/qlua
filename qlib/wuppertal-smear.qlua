-- perform wuppertal smear of the fermion or propagator
require("stdlib")

function wuppertal_smear(U, alpha, N, F, axis)
  local G = F
  for k = 1, N do
    local H = G
    for i in skip(axis + 1, interval(1, qcd.Nd)) do
      H = H + alpha *
                (U[i] * G:shift(i-1, "from_forward") +
                 (U[i]:adjoin() * G):shift(i-1, "from_backward"))
    end
    G = H
  end
  return G
end
